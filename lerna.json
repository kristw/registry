{
  "lerna": "3.2.1",
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "version": "independent",
  "ignoreChanges": [
    "**/*.md",
    "**/*.spec.tsx?",
    "**/*.spec.jsx?",
    "**/__mocks__/**"
  ],
  "command": {
    "publish": {
      "message": "chore: publish",
      "graphType": "all"
    },
    "version": {
      "message": "chore: publish",
      "exact": true
    }
  }
}
